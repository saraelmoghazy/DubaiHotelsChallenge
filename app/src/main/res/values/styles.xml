<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="TajawalButton" parent="Base.Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="GeneralTextView" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TajawalText" parent="GeneralTextView">
        <item name="android:textSize">@dimen/txt_header</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="errorTitle" parent="GeneralTextView">
        <item name="android:textSize">@dimen/txt_header_large</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="HotelName" parent="GeneralTextView">
        <item name="android:textSize">@dimen/txt_body_small</item>
        <item name="android:textColor">@color/black</item>
    </style>


</resources>
